{
  "version": 2,
  "env": {
    "API_URL": "https://online-voting-platform-n1wd.vercel.app"
  },
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/build" 
      }
    },
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "outputDirectory": "frontend/build",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/frontend/build/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    }
  ]
}
